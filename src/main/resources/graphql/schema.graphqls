type Query {
    post(id: ID!): Post
    posts: [Post]
}

type Mutation {
    createPost(title: String!, content: String!, writerId: ID!): Post
    updatePost(id: ID!, content: String!): Post
}

type User {
    id: ID!
    firstName: String
    lastName: String
}

type Post {
    id: ID!
    title: String!
    content: String
    writer: User
}